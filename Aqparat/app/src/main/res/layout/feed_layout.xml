<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:clickable="false"
    android:id="@+id/greyer"
    android:background="#DDDDDD"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/white"
        android:background="#FFFFFF">


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:padding="10dp"
            android:id="@+id/image"
            android:src="@drawable/news_fish"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/title"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/resourceImage"
            android:src="@drawable/resource"
            android:layout_below="@id/title"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/resourceText"
            android:paddingLeft="10dp"
            android:layout_alignBottom="@+id/resourceImage"
            android:layout_toRightOf="@+id/resourceImage"
            android:layout_toEndOf="@+id/resourceImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/category"
            android:layout_alignBottom="@+id/resourceText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#FFFFFF"
            android:background="#BBBBBB"
            android:padding="5dp"/>

    </RelativeLayout>



</LinearLayout>